{% extends "base.twig" %}

{% set page_class = "profile" %}

{% block content %}
	<section class="studio">
		<h2 class="page__subtitle studio__title">{{ page.studio_title }}</h2>
		<div class="page__description studio__description">{{ page.meta('studio_description') }}</div>
		<figure class="studio__image">
			<img class="lazyload" src="{{ Image(page.studio_image).src|resize(300) }}" alt="{{ Image(page.studio_image).alt }}" data-src="{{ Image(page.studio_image).src|resize(1200) }}" data-srcset="{{ Image(page.studio_image).srcset }}" data-sizes="auto">
			<figcaption class="studio__link">
				<a href="{{ page.team_link.url }}">{{ page.team_link.title }}</a>
			</figcaption>
		</figure>
	</section>

	<section class="pillars">
		<h2 class="page__subtitle pillars__title">{{ page.pillars_title }}</h2>
		{% for pillar in page.meta('pillars') %}
			{% if pillar.size == "Full" %}
				<section class="pillar--full">
					<figure class="pillar">
						{% if pillar.text %}
							<figcaption class="pillar__text">{{ pillar.text }}</figcaption>
						{% endif %}
						{% if pillar.illustration %}
							<div class="pillar__image">
								<img class="lazyload" src="{{ Image(pillar.illustration).src|resize(300) }}" alt="{{ Image(pillar.illustration).alt }}" data-src="{{ Image(pillar.illustration).src }}" data-srcset="{{ Image(pillar.illustration).srcset }}" data-sizes="auto">
							</div>
						{% endif %}
					</figure>
				</section>
			{% elseif pillar.size == "Half" %}
				<section class="pillar--half">
					<figure class="pillar">
						{% if pillar.text_left %}
							<figcaption class="pillar__text">{{ pillar.text_left }}</figcaption>
						{% endif %}
						{% if pillar.illustration_left %}
							<div class="pillar__image">
								<img class="lazyload" src="{{ Image(pillar.illustration_left).src|resize(300) }}" alt="{{ Image(pillar.illustration_left).alt }}" data-src="{{ Image(pillar.illustration_left).src }}" data-srcset="{{ Image(pillar.illustration_left).srcset }}" data-sizes="auto">
							</div>
						{% endif %}
					</figure>
					<figure class="pillar">
						{% if pillar.text_right %}
							<figcaption class="pillar__text">{{ pillar.text_right }}</figcaption>
						{% endif %}
						{% if pillar.illustration_right %}
							<div class="pillar__image">
								<img class="lazyload" src="{{ Image(pillar.illustration_right).src|resize(300) }}" alt="{{ Image(pillar.illustration_right).alt }}" data-src="{{ Image(pillar.illustration_right).src }}" data-srcset="{{ Image(pillar.illustration_right).srcset }}" data-sizes="auto">
							</div>
						{% endif %}
					</figure>
				</section>
			{% endif %}
		{% endfor %}
	</section>

	{% for value in page.meta("values") %}
		<section class="values">
			<h2 class="page__subtitle studio__title">{{ value.title }}</h2>
			<div class="page__description studio__description">{{ value.description }}</div>
			<figure class="studio__image">
				<img class="lazyload" src="{{ Image(value.image).src|resize(300) }}" alt="{{ Image(value.image).alt }}" data-src="{{ Image(value.image).src|resize(1200) }}" data-srcset="{{ Image(value.image).srcset }}" data-sizes="auto">
			</figure>
		</section>
	{% endfor %}
